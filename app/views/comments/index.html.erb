<h1>My comments page</h1>
 
<h2>Add a comment:</h2>
	<%= form_for @comment do |f| %>
  		<ul>
		    <li><%= f.label :body %></li>>
		    <li><%= f.text_area :body %></li>
  		</ul>
  		<p>
    		<%= f.submit %>
  		</p>
	<% end %>


	<%= link_to 'Back', user_posts_path %>
	<% if current_user && current_user.admin == true %>
	<%= link_to 'edit comment', edit_user_post_comment_path %>
	<% end %>
