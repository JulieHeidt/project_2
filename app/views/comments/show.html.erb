<h1>This is a comment!</h1>
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>
  <p>
    <strong>Content:</strong>
      <%= @post.content %>
  </p>
  </br>
  <h2>Add a comment:</h2>
    <%= form_for([post_id, @post.comments.new]) do |f| %>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>

  <%= link_to 'Edit', edit_user_post_path(@user, @post) %> 
  <%= link_to 'Back', user_posts_path %>