<section class="newComment">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
		<div class="col-sm-12 col-sm-offset-1">
			<%= form_for :comment do|f| %>
		    	<ul>
			    	<li><%= f.label :body %></li>
			     	<li><%= f.text_field :body, class: "form-control" %></li>
			    </ul>

		    <div class="pushDown30"></div>
		     	<%= f.submit %>
		      	<% end %>
		  		</div>
			<div class="col-sm-10 col-sm-offset-1">
			<div class="pushDown30"><%= link_to 'Show Posts', user_posts_path( current_user.id ) %></div>
      </div>
    </div>
  </div>
</section>
