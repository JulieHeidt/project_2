<section>
  <div class="container">
    <div ="row">
      <div class="col-sm-12">
      <h1>My Blog Posts!</h1>
        <% if current_user != nil %>
        <ul class="pushDown30">
        <li><%= link_to 'New Post', new_user_post_path(@user) %></li>
        </ul>
        <% end %>
        <% @posts.each do |post| %>
          <ul>
            <strong>Post Title:</strong>
            <li><%= post.title %></li>
            <strong>Post Content:</strong>
            <li><%= post.content %></li>
          </ul>
          <ul>
            <li><%= link_to 'show comments', user_post_path(@user.id, post) %></li>
            <% if current_user.id == post.user_id || current_user.admin == true %>
              <li><%= link_to 'Post', edit_user_post_path(@user.id, post), class: "glyphicon glyphicon-pencil" %></li>
              <li><%= link_to 'Post', delete_user_post_path(@user.id, post), method: :delete, class: "glyphicon glyphicon-trash" %></li>
              <li><%= link_to 'Add comment', user_post_comments_path(@user.id, post), class: "glyphicon glyphicon-comment" %></li>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>