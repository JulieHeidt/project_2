<section class="postShow">
  <div class="container">
    <div ="row">
      <div class="col-sm-12">
		<h1 class="headerFormat">My Daily Gratitiude!</h1>
		<h2>Write your thanks</h2>
		<ul>
			<strong>Post Title:</strong>
			<li><%= @post.title %></li>
			<strong>Post Content:</strong>
			<li><%= @post.content %></li>
		</ul>
		<ul>
			<% @post.comments.each do |comment| %>
				<strong> Comments:</strong>
				<li><%= comment.body %></li>
					<% if current_user.id == comment.user_id || current_user.admin == true %>
					<%= link_to 'edit comment', edit_user_post_comment_path(comment.user_id, @post.id, comment.id) %>
					<% end %>
			<% end %>
		</ul>


		<%= link_to 'Edit', edit_user_post_path(@user, @post) %>|
		<%= link_to 'Back', user_posts_path %>|
		<%= link_to 'Add comment', new_comment_path(@user.id, @post) %>

      </div>
    </div>
  </div>
</section>