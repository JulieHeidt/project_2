<section class="newPostForm">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>Upload a post</h1>

        <%= form_for :post, url: user_posts_path(@user), method: :post do |f| %>
          <div>
            <ul>
              <li><%= f.label :title %><li>
              <li><%= f.text_field :title %></li>
            </ul>
             <ul>
                <li><%= f.label :content %></li>
                <li><%= f.text_field :content, class: "form-control" %></li>
            </ul>
            <div class="pushDown30">
              <%= f.submit %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>