<section class="newUser">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 text-center">
        <h1>Signup and DOGOOD</h1>
        <%= form_for @user do |f| %>
          <ul>
            <li><%= f.label :name %></li>
            <li><%= f.text_field :name %></li>
          </ul>
          
          <ul>
            <li><%= f.label :email %></li>
            <li><%= f.text_field :email %></li>
          </ul>

          <ul>
            <li><%= f.label :password %></li>
            <li><%= f.password_field :password %></li>
          </ul>

          <ul>
            <li><%= f.label :password_confirmation %></li>
            <li><%= f.password_field :password_confirmation %></li>
          </ul>

          <ul class="pushDown30">
            <li><%= f.submit %></li>
          </ul>
        <% end %>
      </div>
      <div class="col-sm-6">
        <img src="http://www.braintreepayments.com/blog/content/images/2015/06/do-good.jpg" class="img-responsive">
      </div>
    </div><!-- row -->
  </div><!-- container -->
</section>





